{
  "exclude": [
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "outDir": "./out/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "esModuleInterop": true, // Seems to be overlooked by CLI command tsc (using npx).
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  }
}